{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleDetection": "auto",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": false,
    "strict": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}